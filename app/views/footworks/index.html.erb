<%= render "shared/message" %>

<h1>Footworks</h1>

<div id="footworks">
<table class="ui table" data-controller="footworks">
  <thead>
    <th>
      Name
    </th>
    <th>
    </th>
    <th>
    </th>
  </thead>
<tbody>
  <% @footworks.each do |f| %>
  <tr data-action="mouseover->footworks#active mouseout->footworks#inactive">
    <td><%= f.name %></td>
    <td>Edit</td>

    <td><%= button_to "Delete", footwork_path(f), method: :delete, class: "ui button" %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>

<%= link_to "New footwork", new_footwork_path %>

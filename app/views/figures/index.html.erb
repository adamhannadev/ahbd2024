<p style="color: green"><%= notice %></p>

<h1>Figures</h1>

<div id="figures">
  <% @figures.each do |figure| %>
    <%= render figure %>
    <p>
      <%= link_to "Show this figure", figure %>
    </p>
  <% end %>
</div>

<%= link_to "New figure", new_figure_path %>


<div class="ui icon message">
  <i class="notched circle loading icon"></i>
  <div class="content">
    <div class="header">
      Just one second
    </div>
    <p>We're fetching that content for you.</p>
  </div>
</div>
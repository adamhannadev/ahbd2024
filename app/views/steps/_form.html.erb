<%= form_with(model: step) do |form| %>
  <% if step.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
        <% step.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :count, style: "display: block" %>
    <%= form.text_field :count %>
  </div>

  <div>
    <%= form.label :foot, style: "display: block" %>
    <%= form.text_field :foot %>
  </div>

  <div>
    <%= form.label :foot_position_id, style: "display: block" %>
    <%= form.collection_select(:foot_position_id, FootPosition.all, :id, :name, prompt: 'Please select.') %>
    <%= form.label :new_foot_position %>
    <%= form.text_field :new_foot_position, placeholder: "Add new foot position." %>
  </div>

  <div>
    <%= form.label :footwork_id, style: "display: block" %>
    <%= form.collection_select(:footwork_id, Footwork.all, :id, :name, prompt: 'Please select.') %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
